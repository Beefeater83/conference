
{% extends 'layout.html.twig' %}

{% block title %}AgroFood Summit{% endblock %}

{% block styles %}
    <link rel="stylesheet" href="{{ asset('css/style_main.css') }}">
{% endblock %}

{% block content %}
    <div class="logo-top">
        <div class="logo-wrapper">
            <div class="logo">
                <img src="{{ asset('logo/apk.svg') }}" alt="apk">
            </div>
            <div class="logo">
                <img src="{{ asset('logo/soybean.svg') }}" alt="soybean">
            </div>
            <div class="logo">
                <img src="{{ asset('logo/asia.svg') }}" alt="asia">
            </div>
        </div>

        <div class="event-info-wrapper">
            <div class="event-place">
                <div class="date">{{ 'event.november'|trans }} 5-6-7, 2025</div>
                <div class="turkey">{{ 'event.mersin'|trans }}, {{ 'event.turkey'|trans }}</div>
            </div>
            <div class="event-logo">
                <img src="{{ asset('logo/agrofood.svg') }}" alt="agrofood">
            </div>
            <div class="event-date-registration">
                <div class="table">
                    <div class="before-start">{{ 'event.before_start'|trans }}</div>
                    <div class="day-month-wrapper">
                        <div class="month-wrapper">
                            <div class="month-figure">{{ data.months }}</div>
                            <div class="month">{{ 'event.months'|trans }}</div>
                        </div>
                        <div class="days-wrapper">
                            <div class="days-figure">{{ data.days }}</div>
                            <div class="days">{{ 'event.days'|trans }}</div>
                        </div>
                    </div>
                </div>
                <div class="registration">
                    <div class="btn-wrapper">
                        <a href="#" class="btn">
                            <button class="btn reg-btn" type="button">{{ 'event.registration'|trans }} >></button>
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="slider">
        <div class="int-conf">INTERNATIONAL</div>
        <div class="int-conf">CONFERENCE</div>
    </div>

    <div class="bottom-wave">
        <div class="bottom-menu-up">
            <div class="btn-wrapper">
                <a href="{{ path('about_conference', {'_locale': app.request.locale}) }}" class="btn">
                    <button class="btn" type="button">{{ 'button.about'|trans }}</button>
                </a>
            </div>
            <div class="btn-wrapper">
                <a href="#" class="btn">
                    <button class="btn" type="button">{{ 'button.program'|trans }}</button>
                </a>
            </div>
            <div class="btn-wrapper">
                <a href="#" class="btn">
                    <button class="btn" type="button">{{ 'button.speaker'|trans }}</button>
                </a>
            </div>
        </div>
        <div class="bottom-menu-down">
            <div class="btn-wrapper">
                <a href="#" class="btn">
                    <button class="btn" type="button">{{ 'button.partner'|trans }}</button>
                </a>
            </div>
            <div class="btn-wrapper">
                <a href="#" class="btn">
                    <button class="btn" type="button">{{ 'button.sponsor_options'|trans }}</button>
                </a>
            </div>
            <div class="btn-wrapper">
                <a href="#" class="btn">
                    <button class="btn" type="button">{{ 'button.participation'|trans }}</button>
                </a>
            </div>
            <div class="btn-wrapper">
                <a href="#" class="btn">
                    <button class="btn" type="button">{{ 'button.hotel'|trans }}</button>
                </a>
            </div>
            <div class="btn-wrapper">
                <a href="{{ path('contacts', {'_locale': app.request.locale}) }}" class="btn">
                    <button class="btn" type="button">{{ 'button.contacts'|trans }}</button>
                </a>
            </div>
        </div>

    </div>

{% endblock %}

{% block scripts %}
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
    <script>
        const images = [
            '/images/wheat.JPG',
            '/images/sunflower.JPG',
            '/images/port.JPG'
        ];

        let current = 0;

        function changeBackground() {
            current = (current + 1) % images.length;
            document.querySelector('.slider').style.backgroundImage = `url('${images[current]}')`;
        }

        document.querySelector('.slider').style.backgroundImage = `url('${images[0]}')`;

        setInterval(changeBackground, 4000);
    </script>
{% endblock %}